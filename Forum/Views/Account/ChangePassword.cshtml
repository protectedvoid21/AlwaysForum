@model Data.ViewModels.Account.ChangePasswordViewModel

<style>
    .form-container {
        width: 40%;
        text-align: center;
    }
</style>

<div class="d-flex justify-content-center">
    <form method="post" class="form-container">
        <span asp-validation-for="CurrentPassword"></span>
        <span asp-validation-for="NewPassword"></span>
        <span asp-validation-for="ConfirmPassword"></span>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="CurrentPassword"></label><br/>
            <input asp-for="CurrentPassword" class="form-control" type="password"/>
        </div>
        <div class="mb-3">
            <label asp-for="NewPassword"></label><br/>
            <input asp-for="NewPassword" class="form-control" type="password"/>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label><br/>
            <input asp-for="ConfirmPassword" class="form-control" type="password"/>
        </div>
        <input type="submit" value="Confirm" class="btn btn-primary"/>
    </form>
</div>