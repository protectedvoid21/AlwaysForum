@model string?

<style>
    .avatar {
        width: 100%;
        height: 100%;
        object-fit: scale-down;
    }

    .avatar-container {
        width: 100px;
        height: 100px;
        border: 2px solid #bbbbbb;
        position: relative;
    }
</style>
<div class="avatar-container">
    @if (string.IsNullOrEmpty(Model)) {
        <img src="/images/default-picture.svg" class="avatar">
    }
    else {
        <img src="/images/userpictures/@Model" class="avatar">
    }
</div>