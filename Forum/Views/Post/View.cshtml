@using AlwaysForum.Components
@model Post

<style>
    .title {
        font-weight: bold;
        font-size: 3em;
    }

    .description-container {
        margin-left: 40px;
        margin-right: 20px;
    }

    .create-comment {
        margin: 20px;
    }
</style>

<h2 class="title">@Model.Title</h2>
<h4>@Model.Author.UserName</h4>
<hr/>
<div class="description-container">@Html.Raw(Model.Description)</div>
<hr/>
<div class="create-comment">
    @await Component.InvokeAsync("CreateComment", Model.Id)
</div>

<h3>Comments</h3>
@foreach (var comment in Model.Comments) {
    <ul>
        <li>
            <div class="card">
                <div class="card-header">@comment.Author.UserName  @comment.CreatedTime</div>
                <div class="card-body">@Html.Raw(comment.Description + "...")</div>
            </div>
        </li>
    </ul>
}